{
  "rules": {
    "canvas": {
      ".read": "auth != null",
      "$canvasId": {
        ".read": "auth != null",
        "shapes": {
          ".read": "auth != null",
          ".write": "auth != null",
          "$shapeId": {
            ".read": "auth != null",
            ".write": "auth != null"
          }
        },
        "metadata": {
          ".read": "auth != null",
          ".write": "auth != null"
        },
        "collaborators": {
          ".read": "auth != null",
          ".write": "auth != null"
        },
        ".write": "auth != null && !newData.exists()"
      }
    },
    "sessions": {
      "$canvasId": {
        ".read": "auth != null",
        "$userId": {
          ".read": "auth != null",
          ".write": "auth != null && $userId == auth.uid"
        }
      }
    },
    "selections": {
      "$canvasId": {
        ".read": "auth != null",
        "$shapeId": {
          ".write": "auth != null"
        }
      }
    },
    "drags": {
      ".read": "auth != null",
      "global-canvas-v1": {
        "$shapeId": {
          ".write": "auth != null"
        }
      }
    },
    "friends": {
      "$userId": {
        ".read": "auth != null",
        "pending": {
          "$friendId": {
            ".write": "auth != null && ($userId == auth.uid || $friendId == auth.uid)"
          }
        },
        "outgoing": {
          "$friendId": {
            ".write": "auth != null && ($userId == auth.uid || $friendId == auth.uid)"
          }
        },
        "accepted": {
          "$friendId": {
            ".write": "auth != null && ($userId == auth.uid || $friendId == auth.uid)"
          }
        }
      }
    },
    "directMessages": {
      "$conversationId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "notifications": {
      "$userId": {
        ".read": "auth != null && $userId == auth.uid",
        "requests": {
          ".read": "auth != null",
          ".write": "auth != null"
        },
        "messages": {
          ".read": "auth != null && $userId == auth.uid",
          ".write": "auth != null"
        }
      }
    },
    "chats": {
      "$canvasId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "projects": {
      "$userId": {
        ".read": "auth != null && $userId == auth.uid",
        ".write": "auth != null && $userId == auth.uid"
      }
    },
    "globalPresence": {
      "$userId": {
        ".read": "auth != null",
        ".write": "auth != null && $userId == auth.uid"
      }
    },
    "ai-conversations": {
      "$userId": {
        ".read": "auth != null && $userId == auth.uid",
        ".write": "auth != null && $userId == auth.uid"
      }
    }
  }
}
